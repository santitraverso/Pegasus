@page
@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Mvc.RazorPages;
@using Newtonsoft.Json;
@using PegasusWeb.Entities;
@using System.Text;
@model PegasusWeb.Pages.CreateContenidoModel
@{
}
<form method="post">
    @Html.ValidationMessageFor(a =>a.contenido, "Hubo un error inesperado creando el Contenido")
    <table>
        <tr>
            <td>Nombre</td>
            <td><input type="text" id="nombreContenido" name="nombreContenido" /></td>
            @Html.ValidationMessageFor(a =>a.nombreContenido, "El campo es requerido")
        </tr>
        <tr>
            <td>Descripcion</td>
            <td><input type="text" id="descripcion" name="descripcion" /></td>
            <!--No deberia mostrarlos todo el tiempo-->
            @Html.ValidationMessageFor(a =>a.descripcion, "El campo es requerido")
        </tr>
    </table>
    <button class="btn btn-default">Guardar</button>
</form>
