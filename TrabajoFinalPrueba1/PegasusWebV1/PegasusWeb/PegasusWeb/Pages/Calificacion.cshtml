@page
@using PegasusWeb.Entities
@model PegasusWeb.Pages.CalificacionModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4 class="centrado">Alumnos</h4>
    <br />
    <div class="center-screen">
        <input type="text" id="busqueda" placeholder="Buscar alumnos..." onkeyup="buscarAlumnos()">
    </div>
    <div class="container">
        <table id="tablaAlumnos" class="table">
            <thead>
                <tr>
                    <th>Apellido</th>
                    <th>Nombre</th>
                    <th>Calificaciones</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alumno in Model.Alumnos)
                {
                    <tr class="alumno-row">
                        <form method="post">
                            <input type="hidden" name="usuario" value="@alumno.Id" />
                            <input type="hidden" id="booleano" name="nuevo" value="false">
                            <input type="submit" id="submit-@alumno.Id" style="display:none" />
                            <td class="apellido">@alumno.Usuario.Apellido</td>
                            <td class="nombre">@alumno.Usuario.Nombre</td>

                            <td style="width:30%;">
                                <div class="flex-container">
                                    <ul class="calificaciones-lista">
                                            @{
                                                var index = 0;
                                            }
                                            @foreach (var calificacion in alumno.Usuario.Calificaciones)
                                            {
                                            <li><strong>Nota @(index + 1): </strong> @calificacion.Calificacion</li>
                                                index++;
                                            }
                                    </ul>

                                    <div class="btn-group">
                                            @if (alumno.Usuario.Calificaciones.Any())
                                            {
                                            <img src="~/img/lapiz.png" class="icon edit-image" alt="Editar" onclick="submitForm(@alumno.Id)" style="padding-bottom: 5px; padding-right: 5px; width:32px; height:30px;" />
                                            }

                                        <img src="~/img/nuevo.png" class="icon" alt="Agregar" onclick="Agregar(@alumno.Id)" style="padding-bottom: 5px; width:25px; height:27px;"/>
                                    </div>
                                </div>
                            </td>
                        </form>
                    </tr>
                }
            </tbody>
        </table>
        <div class="center-screen">
            <button class="btn btn-primary btn-custom" asp-area="" asp-page="/CreateMateria" style="margin:10px;">Reporte</button>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Verifica si TempData tiene un mensaje de éxito
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                Swal.fire({
                    icon: "success",
                    title: "Guardado",
                    showConfirmButton: false,
                    width: '300px',
                    padding: '20px',
                    timer: 1500,
                    customClass: {
                        title: 'my-custom-title',
                    }
                });
            </text>
        }
    </script>
</body>
</html>

@section scripts{
    <script>

        function buscarAlumnos() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("busqueda");
            filter = input.value.toUpperCase();
            table = document.getElementById("tablaAlumnos");
            tr = table.getElementsByTagName("tr");

            for (i = 1; i < tr.length; i++) { // Comenzar en 1 para omitir la primera fila de títulos
                // Comprobar si algún valor de las columnas nombre o apellido coincide con el filtro
                var match = false;
                for (j = 0; j < 2; j++) { // Iterar sobre las columnas 0 (nombre) y 1 (apellido)
                    td = tr[i].getElementsByTagName("td")[j];
                    if (td) {
                        txtValue = td.textContent || td.innerText;
                        if (txtValue.toUpperCase().indexOf(filter) > -1) {
                            match = true;
                            break; // Salir del bucle si se encuentra una coincidencia en alguna columna
                        }
                    }
                }
                // Mostrar u ocultar la fila en función de si se encontró una coincidencia
                tr[i].style.display = match ? "" : "none";
            }
        }

        function Agregar(id) {
            document.getElementById('booleano').value = true;
            submitForm(id);
        }

        function submitForm(id) {
            document.getElementById('submit-' + id).click();
        }
    </script>
}