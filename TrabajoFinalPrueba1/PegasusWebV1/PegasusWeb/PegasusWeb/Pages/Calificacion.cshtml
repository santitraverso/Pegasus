@page
@using PegasusWeb.Entities
@model PegasusWeb.Pages.CalificacionModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Calificacion</title>
</head>
<body>
    <h4>Alumnos</h4>
    <hr />
    <br />
    <div class="center-screen">
        <button class="search__button">
            <div class="search__icon">
                <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
                    <title>magnifying-glass</title>
                    <path d="M17.545 15.467l-3.779-3.779c0.57-0.935 0.898-2.035 0.898-3.21 0-3.417-2.961-6.377-6.378-6.377s-6.186 2.769-6.186 6.186c0 3.416 2.961 6.377 6.377 6.377 1.137 0 2.2-0.309 3.115-0.844l3.799 3.801c0.372 0.371 0.975 0.371 1.346 0l0.943-0.943c0.371-0.371 0.236-0.84-0.135-1.211zM4.004 8.287c0-2.366 1.917-4.283 4.282-4.283s4.474 2.107 4.474 4.474c0 2.365-1.918 4.283-4.283 4.283s-4.473-2.109-4.473-4.474z"></path>
                </svg>
            </div>
        </button>
        <input type="text" class="search__input" id="busqueda" placeholder="Buscar usuarios..." onkeyup="buscarUsuarios()">
    </div>
    <br />
    <div class="container">
        <table id="tablaUsuarios" class="table">
            <thead>
                <tr>
                    <th>Apellido</th>
                    <th>Nombre</th>
                    <th>Calificaciones</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alumno in Model.Alumnos)
                {
                    <tr class="alumno-row">
                        <form method="post">
                            <input type="hidden" name="usuario" value="@alumno.Id" />
                            <input type="hidden" id="booleano" name="nuevo" value="false">
                            <input type="submit" id="submit-@alumno.Id" style="display:none" />
                            <td class="apellido">@alumno.Usuario.Apellido</td>
                            <td class="nombre">@alumno.Usuario.Nombre</td>

                            <td style="width:17%;">
                                <div class="flex-container">
                                    <ul class="calificaciones-lista">
                                            @{
                                                var index = 0;
                                            }
                                            @foreach (var calificacion in alumno.Usuario.Calificaciones)
                                            {
                                            <li><strong>Nota @(index + 1): </strong> @calificacion.Calificacion</li>
                                                index++;
                                            }
                                    </ul>

                                    <div class="btn-group">
                                            @if (alumno.Usuario.Calificaciones.Any())
                                            {
                                            <img src="~/img/lapiz.png" class="edit-image" alt="Editar" onclick="submitForm(@alumno.Id)" style="padding-bottom: 5px; padding-right: 5px; width:32px; height:30px;" />
                                            }

                                        <img src="~/img/nuevo.png" class="nuevo-icon" alt="Agregar" onclick="Agregar(@alumno.Id)" style="padding-bottom: 5px;"/>
                                    </div>
                                </div>
                            </td>
                        </form>
                    </tr>
                }
            </tbody>
        </table>
        <div class="center-screen">
            <button class="btn btn-primary btn-custom" asp-area="" asp-page="/CreateMateria" style="margin:10px;">Reporte</button>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Verifica si TempData tiene un mensaje de éxito
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                Swal.fire({
                    icon: "success",
                    title: "Guardado",
                    showConfirmButton: false,
                    width: '300px',
                    padding: '20px',
                    timer: 1500,
                    customClass: {
                        title: 'my-custom-title',
                    }
                });
            </text>
        }
    </script>
</body>
</html>

@section scripts{
    <script>

            function buscarUsuarios() {
                var input, filter, table, tr, td, i, txtValue;
                input = document.getElementById("busqueda");
                filter = input.value.toUpperCase();
                table = document.getElementById("tablaUsuarios");
                tr = table.getElementsByTagName("tr");

                for (i = 1; i < tr.length; i++) { // Comenzar en 1 para omitir la primera fila de títulos
                    // Comprobar si algún valor de las columnas nombre o apellido coincide con el filtro
                    var match = false;
                    for (j = 0; j < 2; j++) { // Iterar sobre las columnas 0 (nombre) y 1 (apellido)
                        td = tr[i].getElementsByTagName("td")[j];
                        if (td) {
                            txtValue = td.textContent || td.innerText;
                            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                                match = true;
                                break; // Salir del bucle si se encuentra una coincidencia en alguna columna
                            }
                        }
                    }
                    // Mostrar u ocultar la fila en función de si se encontró una coincidencia
                    tr[i].style.display = match ? "" : "none";
                }
            }

        function Agregar(id) {
            document.getElementById('booleano').value = true;
            submitForm(id);
        }

        function submitForm(id) {
            document.getElementById('submit-' + id).click();
        }
    </script>
}