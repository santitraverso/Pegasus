@page
@using PegasusWeb.Entities
@model PegasusWeb.Pages.MateriaModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>Materias</h4>
    <hr />
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>Materia Id</th>
            <th>Nombre</th>
            <th>Curso</th>
        </tr>
        @foreach (Materia materia in Model.Materias)
        {
            <tr>
                <td>@materia.Id</td>
                <td>@materia.Nombre</td>
                <td>@materia.Curso</td>
            </tr>
        }
    </table>
</body>
</html>