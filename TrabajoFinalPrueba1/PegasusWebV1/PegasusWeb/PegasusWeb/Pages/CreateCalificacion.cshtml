@page
@using PegasusWeb.Entities
@model PegasusWeb.Pages.CreateCalificacionModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4 class="centrado">Alumnos</h4>
    <br />
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Apellido</th>
                    <th>Nombre</th>
                    <th>Nota</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (IntegrantesMaterias alumno in Model.Alumnos)
                {
                    <tr>
                        <td>@alumno.Usuario.Apellido</td>
                        <td>@alumno.Usuario.Nombre</td>
                        <td>7</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="center-screen">
            <button class="btn btn-primary btn-custom" asp-area="" asp-page="/CreateMateria" style="margin:10px;">Guardar</button>
        </div>
    </div>
</body>
</html>