@page
@using PegasusWeb.Entities
@model ListaMateriasModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>Materias</h4>
    <hr />
    <div class="row">
        @foreach (PegasusWeb.Entities.Materia materia in Model.Materias)
        {
            <div class="col-md-3 justify-content-center">
                <form method="post">
                    <div class="card card-custom card-title-center justify-content-center">
                        <input type="hidden" name="materia" value="@materia.Id" />
                        <button class="btn btn-default" type="submit">
                            <h5 class="card-title card-title-center">@materia.Nombre</h5>
                            <img src="~/img/libros.png" class="card-img-top2" alt="">
                        </button>
                    </div>
                </form>
            </div>
        }
    </div>
</body>
</html>