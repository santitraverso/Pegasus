@page
@using PegasusWeb.Entities
@model MateriaModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Materias</title>
</head>
<body>
    <h4>Materias</h4>
    <hr />
    <a class="nav-link text-dark" asp-page="/Materia/CreateMateria">Crear Materia</a>
    <div class="row">
        <div class="col-12">
            <div class="grid-container">
                <div class="grid-column"></div>
                <div class="grid-column">Materia</div>
                <div class="grid-column">Nombre</div>
                <div class="grid-column">Curso</div>
                @foreach (Materia materia in Model.Materias)
                {
                    <div class="grid-item">
                        <form method="post">
                            <input type="hidden" name="materia" value="@materia" /> 
                            <input type="hidden" name="itemId" value="@materia.Id" />
                            <button type="submit" onclick="return confirm('Desea borrar la materia')">Delete</button>
                        </form>
                    </div>
                    <div class="grid-item">@materia.Id</div>
                    <div class="grid-item">@materia.Nombre</div>
                    <div class="grid-item">@materia.Curso</div>
                }
            </div>
        </div>
    </div>

</body>
</html>
