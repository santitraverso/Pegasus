@page
@using PegasusWeb.Entities
@model PegasusWeb.Pages.CursoModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>Cursos</h4>
    <hr />
    <a class="btn btn-primary btn-custom" asp-page="/CreateCurso" style="margin:10px;">Crear Curso</a>
    <div class="row">
        @foreach (Curso curso in Model.Cursos)
        {
            <div class="col-md-3 justify-content-center">
                <div class="card card-custom card-title-center justify-content-center">
                    <h5 class="card-title card-title-center">@curso.Nombre_Curso</h5>
                    <p class="card-title card-title-center">@curso.Grado @curso.Division</p>
                    <p class="card-title card-title-center">@curso.Turno</p>
                    <form method="post">
                        <input type="hidden" name="curso" value="@curso.Id" />
                        <button class="btn btn-default" type="submit"><img src="~/img/lapiz.png" class="icon" alt=""></button>
                    </form>
                </div>
            </div>
        }
    </div>
</body>
</html>