@page
@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Mvc.RazorPages;
@using Newtonsoft.Json;
@using PegasusWeb.Entities;
@using System.Text;
@model PegasusWeb.Pages.CreateEventoModel
@{
}
<form method="post">
    @Html.ValidationMessageFor(a =>a.evento, "Hubo un error inesperado creando el Evento")
    <table>
        <tr>
            <td>Nombre del Evento</td>
            <td><input type="text" id="nombreEvento" name="nombreEvento" /></td>
            @Html.ValidationMessageFor(a =>a.nombreEvento, "El campo es requerido")
        </tr>
        <tr>
            <td>Descripcion</td>
            <td><input type="text" id="descripcion" name="descripcion" /></td>
            <!--No deberia mostrarlos todo el tiempo-->
            @Html.ValidationMessageFor(a =>a.descripcion, "El campo es requerido")
        </tr>
        <tr>
            <td>Fecha</td>
            <td><input type="datetime-local" id="fecha" name="fecha" /></td>
            <!--No deberia mostrarlos todo el tiempo-->
            @Html.ValidationMessageFor(a =>a.fecha, "El campo es requerido")
        </tr>
    </table>
    <button class="btn btn-default">Guardar</button>
</form>
